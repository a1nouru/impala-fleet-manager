{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "crons": [
    {
      "path": "/api/health",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/warmup",
      "schedule": "* * * * *"
    }
  ]
} 